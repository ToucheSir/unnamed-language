<project name="unnamed_language" default="build">
    <property name="lib" value="${basedir}/lib"/>
    <property name="kotlin.lib" value="${basedir}/kotlinc/lib"/>

    <property name="antlr.src.dir" value="src/main/antlr"/>
    <property name="antlr.build.dir" value="build/generated-src/antlr/main"/>

    <property name="main.build.dir" value="build/classes/main"/>
    <property name="main.src.dir" value="src/main/java"/>
    <property name="test.build.dir" value="build/classes/test"/>
    <property name="test.src.dir" value="src/test/java"/>
    <property name="test.resources.dir" value="src/test/resources"/>

    <uptodate property="antlr.upToDate" srcfile="${antlr.src.dir}/UnnamedLanguage.g"
              targetfile="${antlr.build.dir}/UnnamedLanguage.tokens"/>

    <typedef resource="org/jetbrains/kotlin/ant/antlib.xml"
             classpath="${kotlin.lib}/kotlin-ant.jar"/>

    <path id="classpath">
        <fileset dir="${lib}" includes="*.jar"/>
        <fileset dir="${kotlin.lib}" includes="*.jar"/>
        <pathelement location="${main.build.dir}"/>
    </path>

    <path id="classpath.test">
        <path refid="classpath"/>
        <fileset dir="${lib}/test" includes="*.jar"/>
    </path>

    <target name="clean">
        <delete dir="build" failonerror="false"/>
    </target>

    <target name="build-compiler-lib">
        <mkdir dir="${main.build.dir}"/>
        <kotlinc output="${main.build.dir}">
            <src>
                <dirset dir="${main.src.dir}"/>
            </src>
            <classpath refid="classpath"/>
        </kotlinc>
    </target>

    <target name="antlr" depends="build-compiler-lib" unless="antlr.upToDate">
        <mkdir dir="build"/>
        <java classname="org.antlr.Tool" fork="true" failonerror="true">
            <classpath>
                <path refid="classpath"/>
                <fileset dir="${lib}/antlr" includes="*.jar" />
            </classpath>
            <arg value="-verbose"/>
            <arg value="-o"/>
            <arg path="${antlr.build.dir}"/>
            <arg path="${antlr.src.dir}/UnnamedLanguage.g"/>
        </java>
    </target>

    <target name="build" depends="antlr">
        <mkdir dir="${main.build.dir}"/>
        <javac destdir="${main.build.dir}" includeAntRuntime="false">
            <src>
                <dirset dir="${main.src.dir}"/>
                <dirset dir="build/generated-src"/>
            </src>
            <classpath refid="classpath"/>
        </javac>
    </target>

    <target name="build-tests" depends="build">
        <delete dir="build/classes/test" failonerror="false"/>
        <mkdir dir="build/classes/test"/>
        <javac destdir="${test.build.dir}" includeAntRuntime="false">
            <classpath refid="classpath.test"/>
            <withKotlin/>
            <src>
                <dirset dir="${test.src.dir}"/>
            </src>
        </javac>
    </target>

    <target name="test" depends="build-tests">
        <copy todir="${test.build.dir}">
            <fileset dir="${test.resources.dir}"/>
        </copy>
        <junit printsummary="on" fork="true" showoutput="true" haltonfailure="yes">
            <classpath>
                <path refid="classpath.test"/>
                <pathelement location="${test.build.dir}"/>
            </classpath>
            <formatter type="brief" usefile="false"/>
            <test name="ParserTestHarness"/>
        </junit>
    </target>

    <target name="package-jar" depends="build">
        <jar destfile="${ant.project.name}.jar">
            <manifest>
                <attribute name="Main-Class" value="Compiler"/>
            </manifest>
            <fileset dir="build/classes/main"/>
            <zipgroupfileset dir="${lib}" includes="*.jar"/>
            <zipgroupfileset dir="${kotlin.lib}" includes="kotlin-runtime.jar"/>
        </jar>
    </target>
</project>
